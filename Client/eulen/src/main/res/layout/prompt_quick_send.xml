<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textTitleQuickComposeDialogTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_send_to"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
            android:textSize="16dp" />

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textTitleQuickComposeToDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
            android:textSize="16dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textTitleQuickComposeDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_send_message"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textSize="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint=""
        android:id="@+id/editTextQuickComposeMessage"
        android:gravity="top"
        android:minLines="5"
        android:maxLength="@integer/config_message_size"
        android:textSize="16dp" />
</LinearLayout>